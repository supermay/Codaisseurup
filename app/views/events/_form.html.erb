<%= form_for @event do |f| %>
  <div class="form-group">
    <div class="form-group">
      <label>Name</label>
      <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Description</label>
      <%= f.text_field :description, placeholder: "Description", class: "form-control" %>
    </div>


    <div class="form-group">
      <label>Location</label>
      <%= f.text_field :location, placeholder: "Location", class: "form-control" %>
    </div>


    <div class="form-group">
      <label>Capacity</label>
      <%= f.select :capacity, [["Up to 10", 10], ["10 to 20", 20], ["20 to 50", 50], ["50 to 100", 100]], prompt: "Select capacity of the event", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Price</label>
      <%= f.number_field :price, plceholder: "price in euro", class: "form-control" %>
    </div>

  <div class="form-group">
    <%= f.check_box :includes_food %> Include Food
  </div>
  <div class="form-group">
    <%= f.check_box :includes_drinks %> Include Drinks
  </div>

  <div class="form-group">
    <%= f.datetime_field :starts_at %> Start Time
  </div>

  <div class="form-group">
    <%= f.datetime_field :ends_at %> End Time
  </div>


  <label>Categories of This Event</label>

    <%= f.collection_check_boxes(:category_ids, @categories.all, :id, :name) do |b| %>
    <div class="form-group">
      <%= b.check_box(class: "check_box") %> <%= b.object.name %>
    </div>
  <% end %>

  <label>Create this Event?</label>

  <div class="form-group">
    <%= f.check_box :active %> Yes
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
